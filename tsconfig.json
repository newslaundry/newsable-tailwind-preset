{
  "compilerOptions": {
    "target": "es2016",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.tsx", "**/*.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
